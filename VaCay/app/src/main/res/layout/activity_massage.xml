<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#417f71"
    tools:context=".main.beauty.MassageActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/massage"/>
            <FrameLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Welcome! Please select all the services you want!"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:padding="3dp"
                    android:textStyle="bold"/>
            </FrameLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/back3"
            android:layout_marginLeft="2dp"
            android:layout_gravity="bottom|left"/>
    </FrameLayout>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:padding="16dp"
        android:visibility="gone"
        android:background="@android:color/white">
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="#fff">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@android:color/white">
                <ViewFlipper
                    android:onClick="mOnClick"
                    android:id="@+id/home_viewflipper"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/beautyback4">
                </ViewFlipper>
            </RelativeLayout>
            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_home_footer">
            </com.google.android.gms.ads.AdView>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="#3d7deadf"
            android:paddingTop="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/checkboxA"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:text="Deep Tissue Massage(50 minutes)"
                android:textSize="16sp"
                android:textColor="#4e887b"
                android:checked="false"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="20dp"/>
            <CheckBox
                android:id="@+id/checkboxB"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:text="Deep Tissue Massage(90 minutes)"
                android:textSize="16sp"
                android:textColor="#4e887b"
                android:checked="false"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="20dp"/>
            <CheckBox
                android:id="@+id/checkboxC"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:text="Swedish Massage(50 minutes)"
                android:textSize="16sp"
                android:textColor="#4e887b"
                android:checked="false"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="20dp"/>
            <CheckBox
                android:id="@+id/checkboxD"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:text="Swedish Massage(90 minutes)"
                android:textSize="16sp"
                android:textColor="#4e887b"
                android:checked="false"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_fillrect"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="2dp">
                <TextView
                    android:id="@+id/ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_margin="1.5dp"
                    android:textColor="#fff"
                    android:background="@drawable/green_fillround"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
