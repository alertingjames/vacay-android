<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/profile_fillrect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="top">
                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:visibility="visible"
                    android:background="@drawable/comback"
                    android:scaleType="centerCrop"/>
            </FrameLayout>
            <TextView
                android:id="@+id/company"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="#fb02d209"
                android:singleLine="false"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Company"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#141415"
                        android:text="Director of Marketing"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="2dp">
                            <TextView
                                android:id="@+id/reqId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fb7820"
                                android:singleLine="false"
                                android:drawableLeft="@drawable/dot"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:textSize="12sp"
                                android:text="REQ10109832"
                                />
                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/postDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:singleLine="false"
                                android:gravity="center_vertical"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:text="4/9/2017"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:background="@drawable/green_fillround"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/department"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/dot"
                            android:gravity="center_vertical"
                            android:singleLine="false"
                            android:textSize="13sp"
                            android:layout_marginTop="3dp"
                            android:text="Sales &amp; Marketing"/>

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/markersmall1"
                            android:gravity="center_vertical"
                            android:textSize="12sp"
                            android:layout_marginTop="3dp"
                            android:text="Costa Rica Satellite Sales located in South Florida"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/dot"
                            android:gravity="center_vertical"
                            android:textSize="11sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="3dp"
                            android:text="Four Seasons Resort Costa Rica is looking for Director of Marketing, who shares passion for excellence and to provide excitement in everything you do. In this position you will direct and oversee all marketing activities with the support of teams including, Sales, Catering, Conference Services, Public Relations and Revenue Management for the Hotel and ensure that all activities and bookings are focused to yield maximum revenue per room occupied.      About us:      We are a Forbes 5 star hotel, the only one in Central and South America. We are known to be an inclusive company and provide equal opportunities for our candid      Requirements:         Education: 3 year university/college degree (or equivalent)         Experience: 3 â€“ 5 years of employment in a related position         Skills and Abilities: Requires strong revenue and budget management skills Travel required: Regular Hours required: Scheduled days and times may vary based on need      We expect from you :          Recruit, select and familiarize marketing department personnel with the Hotel and their functions. Train and guide marketing department personnel in the performance of their duties as to specific position responsibilities, performance techniques, reporting procedures, etc. Conduct performance evaluations and follow up with marketing department personnel.         The ability to build a positive working environment.         Implement activities that positively impact hotel Rev Par performance The ability to reposition and re launch the resort after renovation         Review and monitor competitive hotels so as to formulate recommendations on product and service enhancements to remain competitive         Identify sources of business available to the hotel and establish priority marketing opportunities in the solicitation of that business. Develop and implement the Annual Marketing Plan.         Maintain a cooperative working relationship with other departments particularly those with mutual guest contact. Develop special promotional programs to stimulate trial and generate revenue. Develop the advertising and business promotion budget in conjunction with the Annual Marketing Plan. A Team Player and have interpersonal sensitivity.      You can expect:          Participation in a team of professionals in luxury hotel industry Excellent working environment          Access to an attractive benefits package Performance reviews Goals Settings Continuous development and learning opportunities          Complementary nights in Four Seasons Hotels and Resorts worldwide      Learn more about us:      jobs.fourseasons.com/CostaRica The management level for this position is: Operations - Division Head      The Location for this position is:      Remote: Miramar Offices at 3350 SW 148th Ave Suite 204, Miramar, FL 33027  Four Seasons is an Equal Opportunity, Affirmative Action employer. Minorities, women, veterans, and individuals with disabilities are encouraged to apply.  To access the 'EEOC is The Law'  Information poster please visit this website - http://www.eeoc.gov/employers/upload/poster_screen_reader_optimized.pdf"/>

                        <TextView
                            android:id="@+id/empty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/dot"
                            android:gravity="center_vertical"
                            android:textSize="11sp"
                            android:layout_marginTop="5dp"
                            android:text="$150,000 Annually"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/surveynote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="2dp"
                        android:layout_gravity="right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:gravity="center_vertical"
                            android:textSize="11sp"
                            android:textStyle="italic"
                            android:text="Please respond to "/>
                        <TextView
                            android:id="@+id/surveybutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff02d5"
                            android:singleLine="false"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="2dp"
                            android:text="@string/surveybutton"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>