<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/lyt_container">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/thin_back"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:layout_marginTop="25dp"
            android:paddingBottom="5dp"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please register your profile information"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e8ebf2"
            android:orientation="vertical">
            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0px"-->
            <!--android:layout_weight="0.01"/>-->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/splash1"
                android:visibility="visible">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#85000000" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:id="@+id/lyt_container_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:contextClickable="true"
                        android:layout_gravity="center_horizontal">
                        <com.mv.vacay.utils.CircularImageView
                            android:id="@+id/imv_photo"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/photo"
                            android:scaleType="centerCrop"/>
                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Why are you enjoying VaCay? "
                    android:textSize="16sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:background="#68ccb5"
                    android:textColor="#fff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/answer_survey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/questc"
                        android:textSize="15sp"
                        android:paddingTop="8dp"
                        android:background="#fff"
                        android:singleLine="false"
                        android:gravity="left"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First:"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:background="#68ccb5"
                        android:textColor="#fff"/>
                    <EditText
                        android:background="@null"
                        android:id="@+id/txv_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:gravity="center" />
                </LinearLayout>
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#e8ebf2"/>
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last:"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:background="#68ccb5"
                        android:textColor="#fff"/>

                    <EditText
                        android:background="@null"
                        android:id="@+id/txv_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:visibility="gone"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:background="#68ccb5"
                        android:textColor="#fff"/>
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cayley W."
                        android:textSize="15sp"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@null"
                        android:textColor="#000"/>
                </LinearLayout>
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#e8ebf2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/email"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Your Email"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:inputType="textEmailAddress"
                    android:paddingTop="8dp"
                    android:background="#fff"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#000"/>
                <LinearLayout
                    android:id="@+id/lyt_gender"
                    android:layout_width="0px"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/gender"
                        android:text="Gender"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:paddingTop="8dp"
                        android:background="#68ccb5"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#fff"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_drop1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Job:"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/job"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Your Current Job"
                    android:textSize="15sp"
                    android:paddingTop="8dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City: "
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/edt_city"
                    android:layout_width="0px"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:hint="Your Residence City"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:inputType="textCapWords"
                    android:background="#fff"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age:"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:background="#68ccb5"
                    android:textColor="#fff"/>
                <EditText
                    android:id="@+id/edt_age"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Your Age"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:paddingTop="8dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:textColor="#000"/>
            </LinearLayout>

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_marginTop="5dp">-->
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="City: "-->
            <!--android:textSize="16sp"-->
            <!--android:paddingTop="8dp"-->
            <!--android:paddingBottom="8dp"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingRight="5dp"-->
            <!--android:textStyle="bold"-->
            <!--android:background="#fff"-->
            <!--android:textColor="#000"/>-->
            <!--<EditText-->
            <!--android:id="@+id/edt_city"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="Fill with city"-->
            <!--android:textSize="15sp"-->
            <!--android:gravity="center"-->
            <!--android:paddingTop="8dp"-->
            <!--android:inputType="textCapWords"-->
            <!--android:background="#fff"-->
            <!--android:paddingBottom="8dp"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:textColor="#000"/>-->
            <!--</LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Education:"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:textColor="#000"/>
                />
                <EditText
                    android:id="@+id/edt_education"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Your Education"
                    android:textSize="15sp"
                    android:paddingTop="8dp"
                    android:inputType="textCapWords"
                    android:gravity="center"
                    android:background="#fff"
                    android:layout_marginLeft="5dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Interests:"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="#68ccb5"
                    android:textColor="#fff"/>
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/lyt_spin"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edt_firstinterest"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:text="Select your first interest."
                            android:background="@null"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingRight="15dp"
                            android:gravity="center"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_drop1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_spin1"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edt_otherinterest"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:inputType="textCapWords"
                            android:background="@null"
                            android:hint="Other interests (A - B - C)"
                            android:paddingLeft="15dp"
                            android:singleLine="false"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingRight="15dp"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_spin_relationship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/relationship"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="Single/Relationship"
                    android:background="@null"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="15dp"
                    android:gravity="center"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_drop1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_mailing"
                    android:layout_width="0px"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:inputType="textCapWords"
                    android:background="@null"
                    android:hint="Full Mailing Address"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="15dp"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:id="@+id/lyt_search"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/green_fillrect"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/search1"
                        android:padding="2dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/checkin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHECK - IN (Current Location)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="7dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/green_thin_stroke"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ok_update"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="7dp"
                    android:layout_margin="3dp"
                    android:textColor="#fff"
                    android:background="@drawable/green_fillround"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="0.1"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>







