<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#588fec">
    <LinearLayout
        android:id="@+id/beautyFrame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="visible"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/beauty_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/beautyback4"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/beauty_image_net"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/beautyback4"
                    android:layout_alignParentTop="true"
                    android:visibility="gone"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/beauty_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff02f2"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:text="price ($)"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    />
                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="2dp"-->
                <!--android:background="#fff"/>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_gravity="left"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textColorHint="#ff02d2"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:hint="@string/hint1"
                    android:padding="2dp"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mediaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:padding="2dp"
                android:background="@drawable/login_roundrect">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#5990ec"
                    android:textSize="14sp"
                    android:text="MEDIA"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/playbutton2"/>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/beauty_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp"
                    android:text="Beauty service name"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="10dp"
                    android:gravity="left"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff"/>
            </LinearLayout>
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/beauty_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="12sp"
                    android:text="Category"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="10dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/white_stroke">
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="16sp"
                android:singleLine="false"
                android:hint="Description..."
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:gravity="left"
                />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:visibility="invisible">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable/Disable"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="7dp"
                    android:layout_margin="3dp"
                    android:textColor="#fff"
                    android:background="@drawable/white_stroke"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/enableDisable"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:visibility="visible">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable/Disable"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="7dp"
                    android:layout_margin="3dp"
                    android:textColor="#fff"
                    android:background="@drawable/white_stroke"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Breakdown"
                android:gravity="right"
                android:paddingRight="20dp"/>
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cell_shape"
                android:textColor="#fff"
                android:padding="3dp"
                android:layout_gravity="right">
                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:padding="6dp"
                        android:background="@drawable/cell_shape"
                        android:text="Total Service Price"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/totalPrice"
                        android:text="$60.0"
                        android:background="@drawable/cell_shape"
                        android:padding="6dp"
                        android:textColor="#fff"
                        android:layout_weight="0.5"/>
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:padding="6dp"
                        android:text="Processing Fee"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:textColor="#fff"/>
                    <TextView
                        android:id="@+id/processingFee"
                        android:text="$12.0"
                        android:padding="6dp"
                        android:background="@drawable/cell_shape"
                        android:textColor="#fff"
                        android:layout_weight="0.5"/>
                </TableRow>
                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:padding="6dp"
                        android:background="@drawable/cell_shape"
                        android:textColor="#fff"
                        android:text="Your Take Home Pay"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/takeHomePay"
                        android:text="$28.0"
                        android:padding="6dp"
                        android:background="@drawable/cell_shape"
                        android:textColor="#fff"
                        android:layout_weight="0.5"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>




































