<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/lyt_container"
    tools:context=".main.RegisterActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ViewSwitcher
                android:visibility="visible"
                android:id="@+id/viewSwitcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inAnimation="@android:anim/fade_in"
                android:outAnimation="@android:anim/fade_out">

                <com.mv.vacay.widgets.KenBurnsView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img2" />

                <!--<com.mv.vacay.widgets.KenBurnsView-->
                    <!--android:id="@+id/img2"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:src="@drawable/img2" />-->
                <com.mv.vacay.widgets.KenBurnsView
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img2" />

            </ViewSwitcher>
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#18544a4a"/>

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8101152e"/>

        <com.cunoraz.gifview.library.GifView
            android:id="@+id/gif1"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            custom:gif="@drawable/beautyservice"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1.5"/>
            <com.mv.vacay.utils.CircularImageView
                android:visibility="visible"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/vacaylogo22"
                android:layout_gravity="center"
                android:scaleType="center"
                android:id="@+id/logo"/>
            <TextView
                android:id="@+id/explaination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:id="@+id/lytfacebook"
                    android:background="@drawable/facebook_fillrect"
                    >
                    <ImageView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_margin="2dp"
                        android:src="@drawable/facebook"/>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#fff"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:text="Login with Facebook"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingLeft="35dp"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
                <com.facebook.login.widget.LoginButton
                    android:visibility="gone"
                    android:id="@+id/login_button"
                    android:layout_width="320dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    />

            </FrameLayout>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/lytlinkedin"
                android:background="@drawable/linkedin_fillrect"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_margin="2dp"
                    android:src="@drawable/linkedin"/>
                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:text="Login  with  Linkedin"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:paddingLeft="35dp"
                    />
            </LinearLayout>

            <!--<FrameLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!--<LinearLayout-->
            <!--android:layout_width="320dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginTop="20dp">-->
            <!--<View-->
            <!--android:layout_width="0px"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="2dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:background="#fff"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:paddingLeft="40dp"-->
            <!--android:paddingRight="40dp"/>-->
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="OR"-->
            <!--android:textSize="18sp"-->
            <!--android:textColor="#fff"-->
            <!--android:textStyle="italic|bold"-->
            <!--android:layout_gravity="center_vertical"/>-->
            <!--<View-->
            <!--android:layout_width="0px"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="2dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:background="#fff"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:paddingLeft="40dp"-->
            <!--android:paddingRight="40dp"/>-->
            <!--</LinearLayout>-->
            <!--</FrameLayout>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR What are you?  please select ..."
                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_marginTop="15dp"
                android:textStyle="italic"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="left"
                android:gravity="center"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/txv_vendor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manager"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:drawableTop="@drawable/managericon"
                    android:drawablePadding="12dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:textStyle="bold"
                    android:paddingBottom="6dp"
                    android:layout_gravity="top"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/toProviderPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service\nProvider"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="20dp"
                    android:drawableTop="@drawable/serviceprovidericon"
                    android:drawablePadding="10dp"
                    android:paddingTop="6dp"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:paddingBottom="6dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/toEmployeePage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company\nEmployee"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="6dp"
                    android:layout_marginLeft="20dp"
                    android:drawableTop="@drawable/employeeicon2"
                    android:drawablePadding="10dp"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:paddingBottom="6dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#9c000000">
        </FrameLayout>
        <LinearLayout
            android:id="@+id/buttonPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center">
            <TextView
                android:id="@+id/beauty"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@drawable/select_rect"
                android:text="Beauty Service"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="20sp"
                android:visibility="gone"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/retail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@drawable/select_rect"
                android:text="Retail Product"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:textColor="#fff"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/company"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@drawable/select_rect"
                android:text="Company"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:textColor="#fff"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>

