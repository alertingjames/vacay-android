<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_fillrect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#020202"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/thin_back"
            android:layout_gravity="center|left"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Announcement Title"
            android:layout_gravity="center"
            android:gravity="left"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:padding="12dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="top">
                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:visibility="visible"
                    android:background="@drawable/hh"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:id="@+id/mediaButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:background="@drawable/login_roundrect">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#5990ec"
                        android:textSize="14sp"
                        android:text="MEDIA"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:drawableLeft="@drawable/playbutton2"/>
                </LinearLayout>
            </FrameLayout>
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0275ff"
                    android:singleLine="false"
                    android:textStyle="italic"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="11sp"
                    android:text="Posting Date"
                    />
                <TextView
                    android:id="@+id/postDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1a1a19"
                    android:singleLine="false"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:minLines="2"
                    android:text="Updated at :4/9/2017"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="2dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#0275ff"
                        android:singleLine="false"
                        android:textStyle="italic"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="11sp"
                        android:layout_marginRight="10dp"
                        android:text="Respond survey to "
                        />
                    <TextView
                        android:id="@+id/adminemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:singleLine="false"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:text="manager@email.com"
                        />
                    <TextView
                        android:id="@+id/surveyButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff02f6"
                        android:singleLine="false"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="SURVEY"
                        android:background="@drawable/surveymonkeyicon"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="3dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#0275ff"
                            android:singleLine="false"
                            android:textStyle="italic"
                            android:layout_marginTop="3dp"
                            android:gravity="center_vertical"
                            android:textSize="11sp"
                            android:text="Target Audience"
                            />

                        <TextView
                            android:id="@+id/audience"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:textSize="16sp"
                            android:padding="5dp"
                            android:layout_marginTop="2dp"
                            android:text="Target Audience"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#0275ff"
                            android:singleLine="false"
                            android:textStyle="italic"
                            android:gravity="center_vertical"
                            android:textSize="11sp"
                            android:text="Subject"
                            />
                        <TextView
                            android:id="@+id/subject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#1a1a19"
                            android:singleLine="false"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:text="Subject"
                            android:paddingTop="3dp"
                            android:layout_marginTop="2dp"
                            android:paddingBottom="3dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#919191"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="5dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp">
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#0275ff"
                        android:singleLine="false"
                        android:textStyle="italic"
                        android:gravity="center_vertical"
                        android:textSize="11sp"
                        android:text="Company"
                        />

                    <TextView
                        android:id="@+id/company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#b302147b"
                        android:singleLine="false"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:text="Company"/>

                </LinearLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_gravity="top">

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/logo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:visibility="visible"
                        android:background="@drawable/comback"
                        android:scaleType="centerInside"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/viewBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Views:"
                    android:textColor="#f15b26"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="200"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Responses:"
                    android:textColor="#f15b26"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/responses"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="300"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"/>/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#0275ff"
                            android:singleLine="false"
                            android:textStyle="italic"
                            android:gravity="center_vertical"
                            android:textSize="11sp"
                            android:layout_marginTop="3dp"
                            android:text="Description"
                            />
                        <TextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:autoLink="web"
                            android:padding="5dp"
                            android:layout_marginTop="8dp"
                            android:text="Come meet and greet all your new colleagues at a Thursday Happy Hour Social! April 21, 2017 at 5:30 PM in the West Ballroom!"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="8dp"
                            android:background="#919191"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:background="@drawable/blue_thin_stroke"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="3dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#0275ff"
                                    android:singleLine="false"
                                    android:textStyle="italic"
                                    android:gravity="center_vertical"
                                    android:textSize="11sp"
                                    android:text="Message Owner's Email"
                                    />

                                <TextView
                                    android:id="@+id/messageOwner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000"
                                    android:singleLine="false"
                                    android:gravity="center_vertical"
                                    android:textSize="13sp"
                                    android:layout_marginTop="5dp"
                                    android:text="Message Owner's Email"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="0px"
                                        android:layout_weight="20"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="#0275ff"
                                            android:singleLine="false"
                                            android:textStyle="italic"
                                            android:layout_marginTop="5dp"
                                            android:gravity="center_vertical"
                                            android:textSize="11sp"
                                            android:text="Call of Action"
                                            />
                                        <TextView
                                            android:id="@+id/callofAction"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="#000"
                                            android:singleLine="false"
                                            android:padding="5dp"
                                            android:autoLink="all"
                                            android:drawablePadding="15dp"
                                            android:drawableRight="@drawable/collapse_arrow1601"
                                            android:gravity="center_vertical"
                                            android:textSize="13sp"
                                            android:text="Sign up here for the April 29 Social URL"
                                            />
                                        </LinearLayout>
                                    <TextView
                                        android:layout_width="0px"
                                        android:layout_weight="1"
                                        android:layout_height="match_parent" />
                                    <TextView
                                        android:id="@+id/signupButton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/black_fill_rect"
                                        android:text="Sign-Up"
                                        android:textStyle="bold"
                                        android:textColor="#fffd8c"
                                        android:gravity="center"
                                        android:layout_gravity="center_vertical"
                                        android:paddingTop="5dp"
                                        android:paddingBottom="5dp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>