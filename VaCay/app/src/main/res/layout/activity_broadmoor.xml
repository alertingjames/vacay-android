<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/headerbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/toolbar" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ViewSwitcher
                        android:id="@+id/viewSwitcher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inAnimation="@android:anim/fade_in"
                        android:outAnimation="@android:anim/fade_out">

                        <com.mv.vacay.widgets.KenBurnsView
                            android:id="@+id/img1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/beautyback3" />

                        <!--<com.mv.vacay.widgets.KenBurnsView-->
                        <!--android:id="@+id/img2"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:src="@drawable/img2" />-->
                        <com.mv.vacay.widgets.KenBurnsView
                            android:id="@+id/img3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/beautyback5" />

                    </ViewSwitcher>

                </FrameLayout>
                <WebView
                    android:id="@+id/myPage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">
                </WebView>
                <ImageView
                    android:id="@+id/webcancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/cancel_icon"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/search"
                    android:background="#fff"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#02a4ff"
                        >
                        <EditText
                            android:id="@+id/edt_search"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="18sp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:hint="Search"
                            android:drawableLeft="@drawable/search1"
                            android:layout_gravity="center_horizontal"
                            android:drawablePadding="8dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginLeft="50dp"
                            android:singleLine="true"
                            android:background="@null"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginBottom="5dp"
                            android:background="#fff" />

                    </LinearLayout>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"/>
                    <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
                        android:id="@+id/swipe_refresh_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1">
                        <GridView
                            android:id="@+id/productList"
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1"
                            android:columnWidth="180dp"
                            android:drawSelectorOnTop="true"
                            android:gravity="center"
                            android:numColumns="2"
                            android:stretchMode="spacingWidthUniform"
                            android:verticalSpacing="2dp"
                            android:horizontalSpacing="3dp"
                            android:focusable="true"
                            android:clickable="true">
                        </GridView>
                    </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/productPageCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/cancel_icon"/>
                <LinearLayout
                    android:id="@+id/buttonPage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tennisButton"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@drawable/select_rect"
                        android:text="Tennis"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/golfButton"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@drawable/select_rect"
                        android:text="Golf"
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/runButton"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@drawable/select_rect"
                        android:text="Running"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/skiButton"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@drawable/select_rect"
                        android:text="Skiing &amp; Snowboarding"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/bikingButton"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@drawable/select_rect"
                        android:text="Biking"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/fishingButton"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@drawable/select_rect"
                        android:text="Fishing"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/surfingButton"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@drawable/select_rect"
                        android:text="Surfing/Kitesurfing"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/exploringButton"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@drawable/select_rect"
                        android:text="Exploring"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />
</android.support.v4.widget.DrawerLayout>
