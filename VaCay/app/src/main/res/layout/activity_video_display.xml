<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4781dd">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/thin_back"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="49ers vs. Dolphins | NFL Week 12 Game Highlights"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">
                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/youtube_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:id="@+id/barname"
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Buffalo Wild Wings"
                            android:singleLine="true"
                            android:textSize="16sp"
                            android:textColor="#026dff"
                            android:textStyle="bold|italic"
                            android:paddingLeft="8dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColorHint="#7c7979"
                            android:text="People Watching Now"
                            android:drawablePadding="8dp"
                            android:textColor="#37b157"
                            android:textSize="13sp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:layout_gravity="center_vertical"
                            android:drawableRight="@drawable/ic_drop11"/>
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/checkin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColorHint="#7c7979"
                            android:text="Checked in"
                            android:drawablePadding="8dp"
                            android:textColor="#37b157"
                            android:textSize="13sp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:drawableRight="@drawable/ic_drop11"/>
                        />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lyt_listPeopleCheckin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:padding="3dp"
                        android:background="@drawable/green_thin_stroke"
                        android:visibility="gone">
                        <ListView
                            android:id="@+id/list_people_checkin"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:divider="#9c9c9c"
                            android:dividerHeight="3dp"
                            android:scrollbarAlwaysDrawVerticalTrack="true"
                            android:nestedScrollingEnabled="true" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/checkin1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textColorHint="#7c7979"
                        android:text="People Checked in"
                        android:textColor="#37b157"
                        android:textSize="13sp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/lyt_listCheckin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:padding="3dp"
                        android:background="@drawable/green_thin_stroke"
                        android:visibility="gone">
                        <ListView
                            android:id="@+id/list_checkin"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:divider="#9c9c9c"
                            android:dividerHeight="3dp"
                            android:scrollbarAlwaysDrawVerticalTrack="true"
                            android:nestedScrollingEnabled="true" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal">
                                <com.mv.vacay.utils.CircularImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/circle1"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal">
                                <com.mv.vacay.utils.CircularNetworkImageView
                                    android:id="@+id/person"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/cayley4"/>
                            </RelativeLayout>
                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/person_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cayley W."
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:id="@+id/person_comment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hello! Dolphins are killing it! What a play!"
                                android:textSize="12sp"
                                android:layout_marginRight="5dp"
                                android:padding="8dp"
                                android:background="@drawable/green_thin_stroke"
                                android:layout_marginTop="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="100dp" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
