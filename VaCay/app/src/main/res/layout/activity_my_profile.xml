            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#e8ebf2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/deptitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Department:"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/relations"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Single\nHave dogs"
                    android:textSize="15sp"
                    android:paddingTop="8dp"
                    android:background="#fff"
                    android:paddingBottom="8dp"
                    android:paddingLeft="30dp"
                    android:textColor="#000"/>
            </LinearLayout>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="#e8ebf2"/>
            <LinearLayout
                android:id="@+id/lyt_millennial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/miltitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Millennial/Gen Xer... :"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/millennial"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Baby Boomer"
                    android:textSize="15sp"
                    android:paddingTop="8dp"
                    android:gravity="center"
                    android:background="#fff"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:textColor="#000"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="0.1"
                />
        </LinearLayout>
    </ScrollView>
