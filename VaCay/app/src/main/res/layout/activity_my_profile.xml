<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/lyt_container">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/thin_back"
            android:paddingLeft="2dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_gravity="bottom"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/loc1"
                android:paddingLeft="9dp"
                android:paddingTop="10dp"
                android:paddingBottom="9dp"
                android:paddingRight="7dp"
                />
            <ImageView
                android:id="@+id/location"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/loc"
                android:padding="10dp"
                android:layout_gravity="right"
                />
        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/linkedinbackground"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#19000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/lyt_container_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:contextClickable="true"
                android:layout_gravity="center_horizontal">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.mv.vacay.utils.CircularImageView
                        android:id="@+id/imv_photo"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:background="@drawable/cayley4"
                        android:scaleType="centerCrop"/>
                    <com.mv.vacay.utils.CircularNetworkImageView
                        android:id="@+id/imv_photo_net"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:visibility="gone"
                        android:background="@drawable/cayley4"
                        android:scaleType="centerCrop"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/txv_firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Cayley"
                    android:textColorHint="#fff"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/txv_lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="W."
                    android:layout_marginLeft="20dp"
                    android:textColorHint="#fff"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e8ebf2"
            android:orientation="vertical">
            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0px"-->
            <!--android:layout_weight="0.1"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Why are you enjoying VaCay? "
                    android:textSize="16sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:background="#68ccb5"
                    android:textColor="#fff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/answer_survey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/questc"
                        android:textSize="15sp"
                        android:paddingTop="8dp"
                        android:background="#fff"
                        android:singleLine="false"
                        android:gravity="left"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="First name:"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:background="#68ccb5"
                        android:textColor="#fff"/>
                    <TextView
                        android:id="@+id/firstname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cayley"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:paddingTop="8dp"

                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#000"/>
                </LinearLayout>
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#e8ebf2"/>
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Last name:"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:background="#68ccb5"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/lastname"
                        android:text="W."
                        android:gravity="center"
                        android:textSize="15sp"
                        android:paddingTop="8dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#000"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="City:"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/city"
                    android:layout_width="0px"
                    android:layout_weight="2.5"
                    android:layout_height="match_parent"
                    android:text="San Francisco"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:background="#fff"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#000"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#e8ebf2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Age:"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/age_range"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="30"
                    android:textSize="15sp"
                    android:paddingTop="8dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Current Job:"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/job"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Ecommerce Manager"
                    android:textSize="15sp"
                    android:paddingTop="8dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Education:"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:textColor="#000"/>
                />
                <TextView
                    android:id="@+id/education"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Computer Engineering"
                    android:textSize="15sp"
                    android:paddingTop="8dp"
                    android:gravity="center"
                    android:background="#fff"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Interests:"
                    android:textSize="16sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:background="#fff"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/interest"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Typing, Tennis, Reading, Hockey, Golf"
                    android:textSize="15sp"
                    android:paddingTop="8dp"
                    android:background="#fff"
                    android:paddingBottom="8dp"
                    android:paddingLeft="30dp"
                    android:textColor="#000"/>
            </LinearLayout>
