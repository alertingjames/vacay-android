<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_watercooler_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mv.vacay.main.info.CommonInfoViewActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Info"
        android:gravity="center"
        android:paddingTop="6dp"
        android:textColor="#fff"
        android:background="#000"
        android:visibility="visible"
        android:id="@+id/fontableTextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000">

        <TextView
            android:id="@+id/categoryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Category"
            android:gravity="center"
            android:textColor="#fff"
            android:paddingTop="3dp"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/menubuttonicon"
            android:drawablePadding="10dp"/>
        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/setupButton"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Add"
            android:gravity="center"
            android:textColor="#fff"
            android:paddingTop="3dp"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="12dp"
            android:textStyle="bold"
            android:onClick="gotoWatercoolerSetup"
            android:drawableRight="@drawable/collapse_arrow1600"
            android:drawablePadding="3dp"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp"
                android:background="#9c9c9c">
                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0px"
                    android:layout_height="0px" />
                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="match_parent"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:hint="Search"
                    android:drawableLeft="@drawable/search1"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="8dp"
                    android:singleLine="true"
                    android:background="@null"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:background="#fff" />

            </LinearLayout>
            <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#417f71">
                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:dividerHeight="3dp"
                    android:background="#fff"
                    android:divider="#bababa"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    />
            </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#9c000000">
        </FrameLayout>
        <LinearLayout
            android:id="@+id/menuPortion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone"
            android:background="#d8f1f4">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/inspirationimage"/>
            <TextView
                android:id="@+id/helpful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Helpful Tips"
                android:padding="15dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:drawableLeft="@drawable/dot"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/inspiration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Inspiration"
                android:textStyle="bold"
                android:textColor="#000"
                android:drawableLeft="@drawable/dot"
                android:drawablePadding="5dp"
                android:padding="15dp"/>
            <TextView
                android:id="@+id/wellness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Wellness"
                android:textStyle="bold"
                android:textColor="#000"
                android:drawableLeft="@drawable/dot"
                android:drawablePadding="5dp"
                android:padding="15dp"/>
            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Questions"
                android:textStyle="bold"
                android:textColor="#000"
                android:drawableLeft="@drawable/dot"
                android:drawablePadding="5dp"
                android:padding="15dp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
