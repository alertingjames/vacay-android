<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/blurbackground"
    tools:context=".main.restaurant.FoodEntryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EAT OR DRINK?"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/white_stroke"/>
            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/thin_back"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="2dp"
                android:layout_gravity="bottom"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/food"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="0.5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/nicefoodimage2"
                android:background="@drawable/carpediemback1"
                android:padding="5dp"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/drink"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="0px"
                android:src="@drawable/drinkbackground2"
                android:scaleType="fitXY"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/carpediemback1"
                android:padding="5dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/drinktext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:textColor="#fff"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="40dp"
            android:text="DRINK"/>
        <TextView
            android:id="@+id/foodtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:textColor="#fff"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="40dp"
            android:text="FOOD"/>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_home_footer">
        </com.google.android.gms.ads.AdView>
    </FrameLayout>

    <!--<include-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="40dp"-->
    <!--layout="@layout/footer"/>-->
</LinearLayout>
