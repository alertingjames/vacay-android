<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/profile_fillrect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <com.mv.vacay.utils.CircularNetworkImageView
                    android:id="@+id/photo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:visibility="visible"
                    android:background="@drawable/photo"
                    android:scaleType="centerCrop"/>
                <com.mv.vacay.utils.CircularImageView
                    android:id="@+id/photo2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:visibility="gone"
                    android:background="@drawable/photo"
                    android:scaleType="centerCrop"/>
            </FrameLayout>
            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:textColor="#03c423"
                android:singleLine="false"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:text="Login Approved"
                />
            <TextView
                android:id="@+id/sendMailButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send Email"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:textSize="15sp"
                android:textColor="#fffd8c"
                android:textStyle="bold"
                android:visibility="gone"
                android:background="@drawable/black_fill_rect"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="1dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0285ff"
                        android:text="Scott Nash"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="3dp">

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:drawableLeft="@drawable/dot"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"
                            android:text="test@gmail.com"
                            />

                        <TextView
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/dot"
                            android:gravity="center_vertical"
                            android:singleLine="false"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"
                            android:text="female"/>

                        <TextView
                            android:id="@+id/pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/dot"
                            android:gravity="center_vertical"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:text="Tennis13"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/millennial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/dot"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"
                            android:text="Millennial"/>
                        <TextView
                            android:id="@+id/givenbuck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/dot"
                            android:gravity="center_vertical"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:text="$550 (given)"/>
                        <TextView
                            android:id="@+id/usedbuck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/dot"
                            android:gravity="center_vertical"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:text="$200 (used)"/>
                        <TextView
                            android:id="@+id/interactions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:singleLine="false"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/dot"
                            android:gravity="center_vertical"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:text="80"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>