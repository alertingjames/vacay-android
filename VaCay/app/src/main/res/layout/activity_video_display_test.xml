<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="15dp"
        android:background="#4781dd">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/thin_back"
            android:paddingRight="5dp"
            android:layout_gravity="bottom"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="49ers vs. Dolphins | NFL Week 12 Game Highlights"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e8e8e8"
            android:orientation="horizontal">
            <LinearLayout
                android:visibility="visible"
                android:layout_width="0px"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp">
                <!--<ScrollView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1">-->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <!--<com.google.android.youtube.player.YouTubePlayerView-->
                                <!--android:id="@+id/youtube_view"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_marginTop="10dp"-->
                                <!--android:visibility="gone"/>-->

                            <LinearLayout
                                android:id="@+id/lyt_uptairs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/resname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="1dp"
                                    android:paddingBottom="1dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="10dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/magenda_thin_stroke"
                                    >
                                    <ImageView
                                        android:id="@+id/bar_image"
                                        android:layout_width="20dp"
                                        android:layout_height="25dp"
                                        android:padding="1dp"
                                        android:src="@drawable/beer"
                                        />
                                    <TextView
                                        android:id="@+id/barname"
                                        android:layout_width="0px"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="Buffalo Wild Wings"
                                        android:singleLine="true"
                                        android:textSize="13sp"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="#ff02ea"
                                        android:textStyle="bold|italic"
                                        android:paddingLeft="8dp"
                                        />
                                </LinearLayout>
                                <TextView
                                    android:layout_width="0px"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content" />
                                <ImageView
                                    android:id="@+id/scrollhandler"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/upscroll"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="center_vertical"/>
                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="0px"
                                android:layout_weight="1"
                                android:layout_marginBottom="5dp"
                                android:layout_gravity="center_vertical">
                                <LinearLayout
                                    android:id="@+id/lyt_youtube"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >
                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                        <fragment
                                            android:name="com.google.android.youtube.player.YouTubePlayerFragment"
                                            android:id="@+id/youtube_fragment"
                                            android:layout_width="match_parent"
                                            android:layout_weight="1"
                                            android:layout_marginRight="8dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="5dp"/>
                                    </FrameLayout>
                                </LinearLayout>
                                <RelativeLayout
                                    android:id="@+id/lytvideo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:visibility="gone"
                                    android:background="#000"
                                    android:gravity="center"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:orientation="vertical"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginTop="5dp">

                                    <com.mv.vacay.utils.TextureVideoView
                                        android:id="@+id/cropTextureView"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:visibility="gone"/>
                                    <VideoView
                                        android:id="@+id/myvideo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        />
                                    <!--<TextView-->
                                    <!--android:layout_width="match_parent"-->
                                    <!--android:layout_height="0px"-->
                                    <!--android:layout_weight="1"/>-->
                                </RelativeLayout>
                            </FrameLayout>
                        </LinearLayout>

                    </FrameLayout>
                <!--</ScrollView>-->
            </LinearLayout>

            <ScrollView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="horizontal"-->
                        <!--android:layout_marginTop="5dp"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:layout_marginRight="10dp">-->
                        <!--<ImageView-->
                            <!--android:id="@+id/bar_image"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:src="@drawable/beer"-->
                            <!--android:background="#3083ec"/>-->
                        <!--<TextView-->
                            <!--android:id="@+id/barname"-->
                            <!--android:layout_width="0px"-->
                            <!--android:layout_weight="1"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="Buffalo Wild Wings"-->
                            <!--android:singleLine="true"-->
                            <!--android:textSize="15sp"-->
                            <!--android:textColor="#026dff"-->
                            <!--android:textStyle="bold|italic"-->
                            <!--android:paddingLeft="8dp"-->
                            <!--android:paddingTop="5dp"-->
                            <!--android:paddingBottom="5dp"/>-->
                    <!--</LinearLayout>-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/yellow_round_fill"
                        android:padding="5dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="15dp">
                        <TextView
                            android:id="@+id/checkin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColorHint="#7c7979"
                            android:text="Checked in"
                            android:drawablePadding="5dp"
                            android:textColor="#fff"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:drawableRight="@drawable/ic_drop"/>
                        />
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />
                        <ImageButton
                            android:id="@+id/btn_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:src="@drawable/sendbird_btn_setting"
                            android:background="#00000000"
                            android:layout_gravity="right"
                            />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:layout_weight="1"
                        android:layout_marginRight="15dp">
                        <FrameLayout
                            android:id="@+id/fragment_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f0f1f2"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/lyt_container"
                            android:background="@drawable/green_thin_stroke"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:visibility="gone">
                            <FrameLayout
                                android:id="@+id/fragment_container_participant"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#f0f1f2"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lyt_listPeopleWatching"
                            android:layout_width="match_parent"
                            android:layout_height="320dp"
                            android:padding="2dp"
                            android:background="@drawable/green_thin_stroke"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ListView
                                    android:id="@+id/list_people_watching"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:divider="#9c9c9c"
                                    android:dividerHeight="3dp"
                                    android:background="#fff"
                                    android:scrollbarAlwaysDrawVerticalTrack="true"
                                    android:nestedScrollingEnabled="true" />
                                <TextView
                                    android:id="@+id/button_cancel0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cancel"
                                    android:textColor="#fff"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="8dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:background="#34c24e"
                                    android:layout_gravity="right|top"/>
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyt_listCheckin"
                            android:layout_width="match_parent"
                            android:layout_height="260dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/green_thin_stroke"
                            android:visibility="gone">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ListView
                                    android:id="@+id/list_checkin"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:divider="#9c9c9c"
                                    android:dividerHeight="3dp"
                                    android:background="#fff"
                                    android:scrollbarAlwaysDrawVerticalTrack="true"
                                    android:nestedScrollingEnabled="true" />
                                <TextView
                                    android:id="@+id/button_cancel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cancel"
                                    android:textColor="#fff"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginTop="3dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:background="#34c24e"
                                    android:visibility="gone"
                                    android:layout_gravity="right|top"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/cancelcheckin"
                                    android:src="@drawable/cancel_icon"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginTop="3dp"
                                    />
                            </FrameLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/button_cancel1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:textColor="#fff"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="3dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:background="#34c24e"
                            android:visibility="gone"
                            android:layout_gravity="right|top"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cancelbutton"
                            android:src="@drawable/cancel_icon"
                            android:layout_gravity="right"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"/>
                    </FrameLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="20dp"
            ads:adSize="BANNER"
            android:visibility="gone"
            ads:adUnitId="@string/banner_home_footer">
        </com.google.android.gms.ads.AdView>

    </FrameLayout>

</LinearLayout>
