<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_broadmoor_product_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mv.vacay.main.activity.BroadmoorProductPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/broadmoorPage"
        android:background="#fff"
        android:visibility="visible">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#020202"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Products!"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25sp"
                android:padding="9dp"
                />
            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/thin_back"
                android:layout_gravity="center|left"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:background="#9c9c9c"
            >
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px" />
            <EditText
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:hint="Search"
                android:drawableLeft="@drawable/search1"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="8dp"
                android:singleLine="true"
                android:background="@null"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="#fff" />

        </LinearLayout>
        <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1">
            <GridView
                android:id="@+id/productList"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:columnWidth="180dp"
                android:drawSelectorOnTop="true"
                android:gravity="center"
                android:numColumns="2"
                android:stretchMode="spacingWidthUniform"
                android:verticalSpacing="2dp"
                android:horizontalSpacing="3dp"
                android:focusable="true"
                android:clickable="true">
            </GridView>
        </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>

    </LinearLayout>
</LinearLayout>
