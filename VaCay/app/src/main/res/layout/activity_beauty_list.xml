<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#417f71"
    tools:context=".main.beautymen.BeautyListActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/white_fillrect">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    >
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beauty Service List"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/green_fillround"/>
                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/thin_back"
                        android:paddingTop="15dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="bottom"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="vertical"
                android:gravity="center"
                android:backgroundTint="#fff"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                >
                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0px"
                    android:layout_height="0px" />
                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:hint="Search"
                    android:drawableLeft="@drawable/search1"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="8dp"
                    android:singleLine="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#fff" />

            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">
                <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
                    android:id="@+id/swipe_refresh_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#417f71">
                    <ListView
                        android:id="@+id/beautyList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:nestedScrollingEnabled="true"
                        android:dividerHeight="3dp"
                        android:divider="#417f71"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        />
                </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>

            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/timeListContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_roundrect">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/calendarbackground">
                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_roundrect">
                </ListView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/cancel"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:src="@drawable/cancel_icon"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
