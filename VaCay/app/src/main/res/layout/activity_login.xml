<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:id="@+id/lyt_container"
    tools:context=".main.LoginRActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"/>
            <com.mv.vacay.utils.CircularImageView
                android:id="@+id/userphoto"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:background="@drawable/cayley4"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_login"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
            <EditText
                android:id="@+id/edt_city"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:hint="Please input City of Residence"
                android:textColorHint="#fff"
                android:textSize="16sp"
                android:textColor="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:singleLine="false"
                android:background="@drawable/transparency_fill"/>

            <TextView
                android:id="@+id/edt_job"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:hint="Please input your Current job"
                android:textColorHint="#fff"
                android:textSize="16sp"
                android:textColor="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="false"
                android:layout_marginTop="5dp"
                android:background="@drawable/transparency_fill"/>
            <TextView
                android:id="@+id/edt_education"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:hint="Please input your Education"
                android:textColorHint="#fff"
                android:textSize="16sp"
                android:textColor="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="false"
                android:layout_marginTop="5dp"
                android:background="@drawable/transparency_fill"/>
            <TextView
                android:id="@+id/edt_interest"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:hint="Please input your 5 Facebook Interests"
                android:textColorHint="#fff"
                android:textSize="16sp"
                android:textColor="#fff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="false"
                android:layout_marginTop="5dp"
                android:background="@drawable/transparency_fill"/>

            <TextView
                android:id="@+id/txv_login"
                android:layout_width="320dp"
                android:layout_height="45dp"
                android:text="Login"
                android:textSize="18sp"
                android:textColor="#fff"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="12dp"
                android:textStyle="bold"
                android:paddingBottom="12dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/transparency_fill"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
