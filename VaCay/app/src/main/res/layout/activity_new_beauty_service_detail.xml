<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#588fec"
    tools:context="com.mv.vacay.main.beautymen.NewBeautyServiceDetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/nobeauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Beauty Service"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="#ff02a4"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16sp"
            android:paddingBottom="16sp"
            android:paddingTop="45dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        android:src="@drawable/loc1"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="3.4dp"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">
                        <com.mv.vacay.utils.CircularImageView
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:layout_marginLeft="0.5dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/circle"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">
                        <com.mv.vacay.utils.CircularImageView
                            android:id="@+id/provider_profile"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="9.5dp"
                            android:scaleType="centerCrop"
                            android:visibility="visible"
                            android:background="@drawable/cayley4"/>
                        <com.mv.vacay.utils.CircularNetworkImageView
                            android:id="@+id/provider_profile_net"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="9.5dp"
                            android:scaleType="centerCrop"
                            android:visibility="gone"
                            android:background="@drawable/cayley4"/>
                        <ImageView
                            android:id="@+id/availableicon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/bluecircle"
                            android:layout_alignLeft="@+id/provider_profile"
                            android:layout_alignBottom="@+id/provider_profile"/>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/loc"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="5.5dp"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">
                        <TextView
                            android:id="@+id/provider_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:hint="provider name"
                            android:padding="2dp"
                            android:gravity="center"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginLeft="8dp"
                            android:orientation="vertical"
                            android:background="@drawable/green_fillrect"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp">
                            <TextView
                                android:id="@+id/company_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textColorHint="#fff"
                                android:textSize="12sp"
                                android:textStyle="bold|italic"
                                android:hint="Company"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:gravity="center"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:visibility="gone"
                            android:background="#fff"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="3dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/providerEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textColorHint="#fff"
                                android:textSize="12sp"
                                android:hint="Provider Email"
                                android:paddingLeft="10dp"
                                android:paddingBottom="3dp"
                                android:paddingRight="10dp"
                                android:gravity="left"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:visibility="gone"
                                android:background="#588fec"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tempPwd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textColorHint="#fff"
                                android:textSize="12sp"
                                android:visibility="gone"
                                android:hint="Temporal Password"
                                android:paddingLeft="10dp"
                                android:paddingBottom="3dp"
                                android:paddingRight="10dp"
                                android:gravity="left"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:visibility="gone"
                                android:background="#588fec"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textColorHint="#fff"
                                android:textSize="12sp"
                                android:hint="Location or Address"
                                android:drawableLeft="@drawable/markersmall"
                                android:drawablePadding="5dp"
                                android:paddingLeft="10dp"
                                android:paddingBottom="3dp"
                                android:paddingRight="10dp"
                                android:gravity="left"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:visibility="gone"
                                android:background="#588fec"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:padding="3dp"
                            android:background="@drawable/white_stroke"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textColorHint="#fff"
                                android:textSize="12sp"
                                android:hint="Available from"
                                android:paddingLeft="10dp"
                                android:paddingBottom="3dp"
                                android:gravity="left"
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/available"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textColorHint="#fff"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="visible"
                                android:hint="Schedule"
                                android:paddingLeft="10dp"
                                android:paddingBottom="3dp"
                                android:paddingRight="10dp"
                                android:gravity="left"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:visibility="gone"
                                android:background="#588fec"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/productList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:text="@string/buy_product"
                    android:visibility="visible"
                    android:textStyle="italic|bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/collapse_arrow1600"/>
            </LinearLayout>
            <ScrollView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:nestedScrollingEnabled="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/beautyFrame1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:visibility="visible"
                                android:background="@android:color/white">
                                <ImageView
                                    android:id="@+id/beauty_image0"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:adjustViewBounds="true"
                                    android:background="@drawable/bbb2"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentStart="true" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:visibility="visible"
                                android:background="@android:color/white">
                                <ImageView
                                    android:id="@+id/beauty_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:adjustViewBounds="true"
                                    android:background="@drawable/beautyback4"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentStart="true" />
                                <com.android.volley.toolbox.NetworkImageView
                                    android:id="@+id/beauty_image_net"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:adjustViewBounds="true"
                                    android:visibility="gone"
                                    android:background="@drawable/beautyback4"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentStart="true" />
                            </RelativeLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="5dp"
                                android:orientation="vertical"
                                android:padding="5dp"
                                >

                                <TextView
                                    android:id="@+id/beauty_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#ff02ca"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    android:text="price ($)"
                                    android:gravity="center" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginBottom="5dp"
                                android:orientation="vertical"
                                android:padding="2dp"
                                android:onClick="enterMedia"
                                android:background="@drawable/login_roundrect">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#5990ec"
                                    android:textSize="14sp"
                                    android:text="MEDIA"
                                    android:paddingTop="2dp"
                                    android:paddingBottom="2dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:gravity="center"
                                    android:drawableLeft="@drawable/playbutton2"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="left"
                                android:visibility="gone"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:textColorHint="#ff02d2"
                                    android:textSize="13sp"
                                    android:textStyle="italic"
                                    android:hint="@string/hint1"
                                    android:padding="2dp"
                                    android:gravity="center"
                                    />
                            </LinearLayout>

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:orientation="vertical"
                            android:layout_gravity="right">

                            <TextView
                                android:id="@+id/beauty_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textColorHint="#fff"
                                android:textSize="12sp"
                                android:text="Category"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="3dp"
                                android:paddingRight="10dp"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#fff"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="3dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/beauty_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:textColorHint="#fff"
                                    android:textSize="18sp"
                                    android:text="Beauty service name"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="3dp"
                                    android:paddingRight="10dp"
                                    android:gravity="left"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#fff"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:layout_height="match_parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:background="@drawable/white_stroke">
                            <TextView
                                android:id="@+id/description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:textColorHint="#fff"
                                android:textSize="16sp"
                                android:singleLine="false"
                                android:hint="Description..."
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:gravity="left"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginBottom="6dp"
                                android:visibility="invisible">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ACCEPT"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="7dp"
                                    android:layout_margin="3dp"
                                    android:textColor="#fff"
                                    android:background="@drawable/white_stroke"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_weight="1.3"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_marginBottom="6dp">
                                <TextView
                                    android:id="@+id/accept_request"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/accept"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="8dp"
                                    android:layout_margin="3dp"
                                    android:textColor="#fff"
                                    android:background="@drawable/white_stroke"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            ads:adSize="BANNER"
            android:visibility="gone"
            ads:adUnitId="@string/banner_home_footer">
        </com.google.android.gms.ads.AdView>
        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/noitemsProduct"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Products"
            android:layout_marginTop="155dp"
            android:textColor="#02ffd8"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textSize="13sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/timeListContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_roundrect">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/calendarbackground">
                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_roundrect">
                </ListView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/cancel"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:src="@drawable/cancel_icon"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

