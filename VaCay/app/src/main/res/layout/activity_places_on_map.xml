<?xml version="1.0" encoding="utf-8"?>
<com.mv.vacay.classes.MapWrapperLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map_relative_layout"
    android:orientation="vertical"
    tools:context=".nearby.PlacesOnMapActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:id="@+id/showInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/green_fillrect">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/show2"
                android:padding="3dp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/direct"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/direct"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"/>
        <ImageView
            android:id="@+id/refresh"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/refreshicon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="130dp"/>
    </FrameLayout>
</com.mv.vacay.classes.MapWrapperLayout>

